<DocsDemo as |demo|>
  <demo.example @name='template-errors-example.hbs'>
    <p>Errors are not thrown when using template helpers</p>
    {{#let '/sounds/unplayable-scooby.au' as |url|}}
      <button type='button' {{on 'click' (play-sound url)}} class='ui-button'>
        {{#if (sound-is-playing url)}}
          Pause
        {{else}}
          Play
        {{/if}}
      </button>
      {{#if (sound-is-errored url)}}

        <div class='px-1 py-2 text-sm text-danger'>Errors:
          {{sound-error-details url}}</div>
      {{/if}}
    {{/let}}
  </demo.example>
  <demo.snippet @name='template-errors-example.hbs'></demo.snippet>
</DocsDemo>