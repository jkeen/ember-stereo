{{! template-lint-disable no-inline-styles }}

<DocsDemo as |demo|>
  <demo.example @name='service-errors-silence-errors.hbs'>
    <p>You can silence the thrown errors and handle them inline</p>
    <div style='flex place-content-between'>
      <button
        {{on 'click' (fn this.togglePlaySound '/sounds/unplayable-scooby.au')}}
        type='button'
        class='ui-button'
      >
        {{#if this.sound.isPlaying}}
          Pause
        {{else}}
          Play Sound
        {{/if}}
      </button>
    </div>

    {{#if this.error}}
      <div class='px-1 py-2 text-sm text-danger'>{{this.error}}</div>
    {{/if}}
  </demo.example>
  <demo.snippet @name='service-errors-silence-errors.js'></demo.snippet>
  <demo.snippet @name='service-errors-silence-errors.hbs'></demo.snippet>
</DocsDemo>