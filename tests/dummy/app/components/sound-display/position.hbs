<div class='flex flex-col'>
  <div
    {{sound-position-slider @url}}
    class='relative h-3 p-1 rounded bg-surface-2'
  >
    <div
      class='{{if
          (and (not (sound-is-seekable @url)) (sound-is-playing @url))
          'absolute inset-1 rounded-md shadow-inset from-accent-0 to-accent-2  bg-gradient-to-r animate-gradient-x animated'
        }}'
    >

    </div>
    <div
      data-position-percent={{sound-position @url format='percentage'}}
      style={{html-safe
        (concat 'width: ' (sound-position @url format='percentage') '%')
      }}
      class='h-full transition-all pointer-events-none rounded-xl bg-accent-0'
    ></div>
  </div>
  <div class='flex justify-between mt-1 text-xs'>
    <span>
      {{sound-position @url format='time'}}
    </span>
    <span>
      {{sound-duration @url format='time'}}
    </span>
  </div>

</div>